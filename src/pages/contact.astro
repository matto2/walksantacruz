---
import Layout from '../layouts/Layout.astro';
---

<Layout
	title="Contact Us | Walk Santa Cruz"
	description="Get in touch with Walk Santa Cruz. Request a private tour, ask questions, or learn more about our guided walking tours in Santa Cruz, CA."
>
	<!-- Hero Section -->
	<section class="full-bleed bg-accent/20 py-16 md:py-24">
		<div class="container">
			<div class="max-w-3xl mx-auto text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Us</h1>
				<p class="text-xl text-muted-foreground">
					Questions? Want to book a private tour? We'd love to hear from you.
				</p>
			</div>
		</div>
	</section>

	<!-- Contact Content -->
	<section class="container py-16 md:py-24">
		<div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
			<!-- Contact Info -->
			<div>
				<h2 class="text-3xl font-bold mb-6">Walk Santa Cruz</h2>
				<p class="text-lg text-muted-foreground mb-8">
					Local guides, local stories. Experience the best of Santa Cruz with our expert-led walking tours.
				</p>

				<div class="space-y-4 mb-8">
					<div class="flex items-start gap-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-1 text-primary">
							<path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
							<circle cx="12" cy="10" r="3"></circle>
						</svg>
						<div>
							<div class="font-semibold">Location</div>
							<div class="text-muted-foreground">Santa Cruz, CA 95060</div>
						</div>
					</div>

					<div class="flex items-start gap-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-1 text-primary">
							<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
						</svg>
						<div>
							<div class="font-semibold">Phone</div>
							<a href="tel:8312752566" class="text-muted-foreground hover:text-primary transition-colors">(831) 275-2566</a>
						</div>
					</div>

					<div class="flex items-start gap-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-1 text-primary">
							<rect width="20" height="16" x="2" y="4" rx="2"></rect>
							<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
						</svg>
						<div>
							<div class="font-semibold">Email</div>
							<div class="text-muted-foreground">info@walksantacruz.com</div>
						</div>
					</div>
				</div>

				<div class="text-sm text-muted-foreground">
					<strong>Business License #12345</strong>
				</div>
			</div>

			<!-- Contact Form -->
			<div>
				<h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>

				<form name="contact" method="POST" data-netlify="true" class="form space-y-6">
					<input type="hidden" name="form-name" value="contact" />
					<input type="hidden" name="bot-field" />

					<div>
						<label for="name" class="block font-semibold mb-2">Name *</label>
						<input type="text" id="name" name="name" required class="w-full" />
					</div>

					<div>
						<label for="email" class="block font-semibold mb-2">Email *</label>
						<input type="email" id="email" name="email" required class="w-full" />
					</div>

					<div>
						<label for="phone" class="block font-semibold mb-2">Phone</label>
						<input type="tel" id="phone" name="phone" class="w-full" />
					</div>

					<div>
						<label for="subject" class="block font-semibold mb-2">Subject</label>
						<select id="subject" name="subject" class="w-full">
							<option value="">Select a subject</option>
							<option value="private-tour">Private Tour Request</option>
							<option value="general">General Question</option>
							<option value="booking">Booking Question</option>
							<option value="other">Other</option>
						</select>
					</div>

					<div>
						<label for="message" class="block font-semibold mb-2">Message *</label>
						<textarea id="message" name="message" rows="6" required class="w-full"></textarea>
					</div>

					<button type="submit" class="btn btn-lg w-full">Send Message</button>
				</form>
			</div>
		</div>
	</section>
</Layout>
