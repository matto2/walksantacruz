---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface GalleryImage {
  src: ImageMetadata;
  alt: string;
  caption?: string;
}

interface Props {
  images: GalleryImage[];
  title?: string;
}

const { images, title = "Gallery" } = Astro.props;
---

{
  images && images.length > 0 && (
    <div>
      <h2 class="text-2xl md:text-3xl font-bold mb-6">{title}</h2>

      {/* Single image layout */}
      {images.length === 1 && (
        <div class="rounded-lg overflow-hidden">
          <Image
            src={images[0].src}
            alt={images[0].alt}
            class="w-full h-auto object-cover cursor-pointer hover:opacity-90 transition-opacity"
            data-lightbox-trigger
            data-lightbox-src={images[0].src.src}
            data-lightbox-alt={images[0].alt}
            loading="lazy"
            quality={80}
          />
          {images[0].caption && (
            <p class="text-sm text-muted-foreground mt-2 text-center italic">
              {images[0].caption}
            </p>
          )}
        </div>
      )}

      {/* Grid layout for multiple images */}
      {images.length > 1 && (
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          {images.map((image, index) => (
            <div class="rounded-lg overflow-hidden group">
              <Image
                src={image.src}
                alt={image.alt}
                class="w-full h-48 object-cover cursor-pointer group-hover:opacity-90 transition-opacity"
                data-lightbox-trigger
                data-lightbox-src={image.src.src}
                data-lightbox-alt={image.alt}
                loading="lazy"
                quality={75}
              />
              {image.caption && (
                <p class="text-xs text-muted-foreground mt-1 px-1">
                  {image.caption}
                </p>
              )}
            </div>
          ))}
        </div>
      )}
    </div>
  )
}
