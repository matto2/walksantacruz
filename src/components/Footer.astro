---
// Footer Component
import Logo2 from "./Logo2.astro";
---

<footer class="bg-primary text-primary-foreground mt-auto">
  <div class="container py-12">
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- About -->
      <div>
        <div class="mb-4">
          <a href="/">
            <Logo2 iconColor="white" textColor="text-white" />
          </a>
        </div>
        <p class="mb-4 opacity-90">
          Local guides, local stories. Experience the best of Santa Cruz with
          our expert-led walking tours.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <nav class="flex flex-col gap-2">
          <a href="/" class="opacity-90 hover:opacity-100 transition-opacity"
            >Home</a
          >
          <a
            href="/gallery"
            class="opacity-90 hover:opacity-100 transition-opacity">Gallery</a
          >
          <a
            href="/about"
            class="opacity-90 hover:opacity-100 transition-opacity">About</a
          >
          <a
            href="/contact"
            class="opacity-90 hover:opacity-100 transition-opacity">Contact</a
          >
          <a
            href="/private-tours"
            class="opacity-90 hover:opacity-100 transition-opacity">Private Tours</a
          >
        </nav>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <div class="space-y-3 opacity-90">
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            <a
              href="tel:8312752566"
              class="hover:opacity-100 transition-opacity">(831) 275-2566</a
            >
          </div>
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            <a
              href="mailto:hello@walksantacruz.com"
              class="hover:opacity-100 transition-opacity"
              >hello@walksantacruz.com</a
            >
          </div>
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9z"></path>
              <path
                d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"
