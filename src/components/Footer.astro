---
// Footer Component
import { Image } from "astro:assets";
import Logo2 from "./Logo2.astro";
import LookoutLogo from "../assets/LookoutLogo.png";
---

<footer class="text-white mt-auto" style="background-color: #007a99;">
  <div class="container py-12">
    <!-- In the News Card -->
    <div class="bg-white rounded-lg p-6 mb-8 max-w-lg mx-auto">
      <h3 class="text-primary font-semibold text-4xl text-center mb-3">We're in the News!</h3>
      <div class="flex flex-col gap-6 items-center">
        <div class="flex justify-center">
          <a
            href="https://lookout.co/new-downtown-walking-tour-aspires-to-tell-santa-cruzs-hidden-stories/story"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Image
              src={LookoutLogo}
              alt="Lookout Santa Cruz"
              width={1179}
              height={327}
              class="max-w-full h-auto max-h-12 object-contain"
            />
          </a>
        </div>
        <div class="text-center">
          <p class="text-gray-700 text-lg">
            Read about <a
              href="https://lookout.co/new-downtown-walking-tour-aspires-to-tell-santa-cruzs-hidden-stories/story"
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary hover:opacity-80 transition-opacity underline"
            >
              Walk Santa Cruz in Lookout Santa Cruz
            </a>
          </p>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- About -->
      <div>
        <div class="mb-4">
          <a href="/#top" data-astro-reload>
            <Logo2 iconColor="white" textColor="text-white" />
          </a>
        </div>
        <!-- Social Media Icons -->
        <div class="flex gap-4 mb-4">
          <a
            href="https://instagram.com/walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="Instagram"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
          <a
            href="https://tiktok.com/@walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="TikTok"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>
            </svg>
          </a>
          <a
            href="https://youtube.com/@walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="YouTube"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"
              ></path>
              <path d="m10 15 5-3-5-3z"></path>
            </svg>
          </a>
        </div>
        <p class="mb-4 opacity-90">
          Local guides, local stories. Experience the best of Santa Cruz with
          our expert-led walking tours.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <nav class="flex flex-col gap-2">
          <a href="/#top" data-astro-reload class="opacity-90 hover:opacity-100 transition-opacity"
            >Home</a
          >
          <a
            href="/about"
            class="opacity-90 hover:opacity-100 transition-opacity">About</a
          >
          <a
            href="/gallery"
            class="opacity-90 hover:opacity-100 transition-opacity">Gallery</a
          >
          <a
            href="/contact"
            class="opacity-90 hover:opacity-100 transition-opacity">Contact</a
          >
          <a
            href="/private-tours"
            class="opacity-90 hover:opacity-100 transition-opacity">Private Tours</a
          >
          <a
            href="/team-offsites"
            class="opacity-90 hover:opacity-100 transition-opacity">Team Offsites</a
          >
          <a
            href="/faq"
            class="opacity-90 hover:opacity-100 transition-opacity">FAQ</a
          >
        </nav>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <div class="space-y-3 opacity-90">
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
            <a
              href="tel:8312752566"
              class="hover:opacity-100 transition-opacity">(831) 275-2566</a
            >
          </div>
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            <a
              href="mailto:hello@walksantacruz.com"
              class="hover:opacity-100 transition-opacity"
              >hello@walksantacruz.com</a
            >
          </div>
          <div class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9z"></path>
              <path
                d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"
              ></path>
            </svg>
            <a
              href="https://wa.me/18312752566"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:opacity-100 transition-opacity">WhatsApp</a
            >
          </div>
          <div class="mt-4 text-sm">
            850 Front St, Ste 388<br />
            Santa Cruz, CA<br />
            95060-9998
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-primary-foreground/20 pt-8">
      <div class="text-sm opacity-90 text-center">
        Â© {new Date().getFullYear()} Walk Santa Cruz. All rights reserved. | <a
          href="/privacy"
          class="hover:opacity-100 transition-opacity">Privacy Policy</a
        > | Business License #BL-112199 | Site design by <a
          href="https://mattoleary.design"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:opacity-100 transition-opacity">Matt O'Leary Design</a
        >
      </div>
    </div>
  </div>
</footer>
