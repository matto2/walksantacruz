---
// Footer Component
import Logo2 from "./Logo2.astro";
---

<footer class="bg-primary text-primary-foreground mt-auto">
  <div class="container py-12">
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- About -->
      <div>
        <div class="mb-4">
          <a href="/">
            <Logo2 iconColor="white" textColor="text-white" />
          </a>
        </div>
        <p class="mb-4 opacity-90">
          Local guides, local stories. Experience the best of Santa Cruz with
          our expert-led walking tours.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <nav class="flex flex-col gap-2">
          <a href="/" class="opacity-90 hover:opacity-100 transition-opacity"
            >Home</a
          >
          <a
            href="/gallery"
            class="opacity-90 hover:opacity-100 transition-opacity">Gallery</a
          >
          <a
            href="/about"
            class="opacity-90 hover:opacity-100 transition-opacity">About</a
          >
          <a
            href="/contact"
            class="opacity-90 hover:opacity-100 transition-opacity">Contact</a
          >
        </nav>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <div class="space-y-2 opacity-90">
          <div>
            <div class="font-semibold">Phone</div>
            <a
              href="tel:8312752566"
              class="hover:opacity-100 transition-opacity">(831) 275-2566</a
            >
          </div>
          <div>
            <div class="font-semibold">Email</div>
            <a
              href="mailto:hello@walksantacruz.com"
              class="hover:opacity-100 transition-opacity"
              >hello@walksantacruz.com</a
            >
          </div>
          <div>
            <div class="font-semibold">Location</div>
            <div>Santa Cruz, CA 95060</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Media & Copyright -->
    <div class="border-t border-primary-foreground/20 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Social Media Icons -->
        <div class="flex gap-4">
          <a
            href="https://instagram.com/walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="Instagram"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
          <a
            href="https://twitter.com/walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="Twitter"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
              ></path>
            </svg>
          </a>
          <a
            href="https://tiktok.com/@walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="TikTok"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>
            </svg>
          </a>
          <a
            href="https://youtube.com/@walksantacruz"
            target="_blank"
            rel="noopener noreferrer"
            class="opacity-90 hover:opacity-100 transition-opacity"
            aria-label="YouTube"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17"
              ></path>
              <path d="m10 15 5-3-5-3z"></path>
            </svg>
          </a>
        </div>

        <!-- Copyright -->
        <div class="text-sm opacity-90">
          Â© {new Date().getFullYear()} Walk Santa Cruz. All rights reserved.
        </div>
      </div>
    </div>
  </div>
</footer>
