---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props {
  slug: string;
  title: string;
  image: ImageMetadata;
  imageAlt: string;
  adultPrice: number;
  childPrice: number;
}

const { slug, title, image, imageAlt, adultPrice, childPrice } = Astro.props;
---

<a
  href={`/tours/${slug}`}
  class="card bg-muted/50 hover:border-primary transition-all group block"
  data-tour-card
  aria-label={`Learn more about ${title}`}
>
  <div class="p-6">
    {/* Tour Image */}
    <div class="mb-4 rounded-lg overflow-hidden">
      <Image
        src={image}
        alt={imageAlt}
        class="w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
        quality={75}
      />
    </div>

    {/* Tour Title */}
    <h3 class="text-xl font-bold mb-3 group-hover:text-primary transition-colors">
      {title}
    </h3>

    {/* Tour Pricing */}
    <div class="text-sm mb-4 space-y-1">
      <div class="font-semibold text-foreground">ADULT: ${adultPrice}</div>
      <div class="font-semibold text-foreground">CHILD (6-12): ${childPrice}</div>
      <div class="text-xs text-muted-foreground">Kids 5 and under and Seniors over 72 are FREE with adult ticket purchased</div>
    </div>

    {/* Learn More Link */}
    <div class="flex items-center gap-2 text-primary font-semibold group-hover:gap-3 transition-all">
      <span>Learn More</span>
      <Icon name="lucide:arrow-right" class="w-4 h-4" />
    </div>
  </div>
</a>
