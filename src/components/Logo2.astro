---
import FootprintsIcon from '../assets/SVG/footprints-ICON.svg';
import WhiteIcon from '../assets/SVG/walk-icon-WHITE.svg';
import OrangeCircleIcon from '../assets/wsc-orange-circle.svg';

interface Props {
	class?: string;
	iconColor?: string;
	textColor?: string;
	size?: 'default' | 'large';
}

const {
	class: className,
	iconColor = 'currentColor',
	textColor = 'text-primary',
	size = 'default'
} = Astro.props;

// For 'large' size, use responsive classes (small on mobile, large on lg+)
const iconSize = size === 'large' ? 32 : 32;
const iconClass = size === 'large' ? 'logo-icon-responsive' : '';
const textSize = size === 'large' ? 'text-4xl lg:text-5xl' : 'text-4xl';

// Determine text color - use white if textColor prop is text-white, otherwise use brand dark
const computedTextColor = textColor === 'text-white' ? '#ffffff' : '#333333';

// Use orange circle icon when textColor is white (header/footer), otherwise use regular icon
const Icon = textColor === 'text-white' ? OrangeCircleIcon : FootprintsIcon;
---

<div class={`flex items-center gap-2 ${className || ''}`}>
	<Icon width={iconSize} height={iconSize} class={`flex-shrink-0 ${iconClass}`} fill={iconColor} />
	<span class={`${textSize} ${textColor} ${size === 'large' ? 'logo-text-responsive' : ''}`} style={`color: ${computedTextColor}; font-family: 'Night Empty', sans-serif; transform: translateY(3px);`}>Walk Santa Cruz</span>
</div>

{size === 'large' && (
	<style>
		.logo-icon-responsive {
			width: 28px;
			height: 28px;
		}
		.logo-text-responsive {
			font-size: 1.5rem;
		}
		@media (min-width: 377px) {
			.logo-icon-responsive {
				width: 32px;
				height: 32px;
			}
			.logo-text-responsive {
				font-size: 2.25rem;
			}
		}
		@media (min-width: 1024px) {
			.logo-icon-responsive {
				width: 42px;
				height: 42px;
			}
			.logo-text-responsive {
				font-size: 3rem;
			}
		}
	</style>
)}
